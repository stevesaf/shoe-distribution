<h1><%= @store.name() %>

  <h3>Select all brands this store stocks:</h3>

  <% if @brands.any?() %>
      <form action="/stores/<%= @store.id %>" method="post">
        <input type="hidden" name="_method" value="patch">

        <% @brands.each() do |brand| %>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="brand_ids[]" value="<%= brand.id() %>"><%= brand.name() %>
            </label>
          </div>
        <% end %>

        <button type="submit">Add brand</button>
      </form>
    <% end %>
    <% if @store.brands().any?() %>
      <h3>Here are all the brands this store is has:</h3>
        <ul>
          <% @store.brands().each() do |brand| %>
            <li><%= brand.name() %></li>
            <% end %>
        </ul>
      <% else %>
      <p>There are no brands yet!</p>
      <% end %>
